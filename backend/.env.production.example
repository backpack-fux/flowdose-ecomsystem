# Production Environment

# Core Configuration
NODE_ENV=production
JWT_SECRET=your_jwt_secret_here
COOKIE_SECRET=your_cookie_secret_here

# CORS Settings - Set these values for your domain(s)
ADMIN_CORS=https://admin.yourdomain.com,https://yourotherdomain.com
STORE_CORS=https://store.yourdomain.com
AUTH_CORS=https://admin.yourdomain.com,https://yourotherdomain.com

# Database
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Redis
REDIS_URL=rediss://username:password@host:port?family=0

# Admin Account
MEDUSA_ADMIN_EMAIL=admin@yourmail.com
MEDUSA_ADMIN_PASSWORD=your_secure_password_here

# Payment Processing
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

PYLON_API_KEY=
SYNAPSO_API_KEY=

# Email
RESEND_FROM=Your Name <your.email@example.com>
RESEND_KEY=your_resend_api_key_here
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=Your Name <your.email@example.com>

# File Storage - MinIO for Local and Spaces for Production
SPACES_ENDPOINT=your_spaces_endpoint
SPACES_ACCESS_KEY=your_spaces_access_key
SPACES_SECRET_KEY=your_spaces_secret_key
SPACES_BUCKET=medusa-media

# Search - Meilisearch
MEILISEARCH_HOST=https://your_meilisearch_host
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key

# Digital Ocean Specific
DO_HEALTHCHECK_TIMEOUT_SEC=720
DO_PUBLIC_DOMAIN_VALUE=https://your_public_domain
TEMPLATE_REPORTER_URL=